{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@finos/calm-shared": ["shared/src"],
            "@finos/calm-shared/model": ["shared/src/model"],
            "@finos/calm-shared/*": ["shared/src/*"]
        },
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "references": [
        { "path": "./shared" },
        { "path": "./cli" },
        { "path": "./calm-visualizer"}
    ],
    "include": [
        "shared/**/*",
        "cli/**/*",
        "calm-visualizer/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}