{
    "compilerOptions": {
        "target": "es2021",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "vitest",
            "node",
        ]
    }
}
